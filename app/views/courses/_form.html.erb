<%= form_for @course do |f| %>

	<%= f.error_messages %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<%= f.label :start_date %>
	<%= f.date_select :start_date %>
	<%= f.label :price %>
	<%= f.text_field :price, :class => 'money' %>
	<%= f.submit %>
<%end %>

<%= debug @course %>
<%= debug @course.valid? %>
<%= debug @course.errors %>